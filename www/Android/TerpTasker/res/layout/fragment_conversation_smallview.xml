<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conversationLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgrey"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/conversationIcon"
        android:layout_gravity="center_vertical"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/logout_icon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/conversationName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Contact Name and Phone Number"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/conversationDetail1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Additional conversation info 1" />

        <TextView
            android:id="@+id/conversationDetail2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Additional conversation info 2" />
    </LinearLayout>

</LinearLayout>